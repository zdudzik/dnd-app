<body style="margin-top:50px">
<p id="notice"><%= notice %></p>

  <container class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 text-center">
    <h1>Characters</h1>
  </container

<div>
<table class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.race %></td>
        <td><%= character.role %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Select', characters_choose_path(:id => character.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<container class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 text-center">
    <%= link_to "New Character", new_character_path, class: "btn btn-default" %>
</container>

</body>


